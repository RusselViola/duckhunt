<div class="row">
  <div class="col-md-6">
    <h1 class="text-center">Register</h1>
    <div class="row">
      <div class="col-md-3">
        <%= form_for @user do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control", placeholder: "UserName"%>
          </div>
          <div class="form-group">
            <%= f.submit class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
